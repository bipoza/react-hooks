{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "bootstrap": {
      "hoist": true,
      "ci": false,
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): Release %s",
      "tagVersionPrefix": ""
    }
  }
}
