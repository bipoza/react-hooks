{
  "name": "@root/util",
  "private": true,
  "version": "0.0.1",
  "description": "React Hooks for Capacitor apps",
  "keywords": [
    "react",
    "capacitor",
    "hooks",
    "ionic framework",
    "ionic"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/capacitor-community/react-hooks.git"
  },
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/",
    "types/"
  ],
  "scripts": {
    "build": "npm run clean && npm run transpile && npm run rollup",
    "clean": "rimraf build && rimraf dist && rimraf types",
    "rollup": "rollup --config ../../rollup.config.js",
    "test": "jest",
    "transpile": "tsc"
  },
  "peerDependencies": {
    "@capacitor/core": "^3.0.0",
    "@capacitor/screen-reader": "*",
    "react": "*"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist-transpiled",
      "dist",
      "test-app"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
